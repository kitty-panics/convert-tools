#!/usr/bin/env bash

#
# dos to unix
#
# 注：
# 需要系统已装 glibc, dos2unix 包
#

find . -type f | while read -r LINE
do
    # Encoding to UTF-8
    FILE_MIME=$(file -bi "$LINE" | cut -d'=' -f2)
    iconv --from-code="$FILE_MIME" --to-code="UTF-8" --output="$LINE" "$LINE"

    # DOS to UNIX and remove BOM
    dos2unix --oldfile --quiet --remove-bom --safe "$LINE"
done
